{
  "name": "blockchainstandards-website",
  "version": "1.0.0",
  "scripts": {
    "dev": "hugo server -D & npm run tailwind:watch",
    "build": "npm run tailwind:build && hugo --minify",
    "tailwind:watch": "tailwindcss -i ./assets/css/tailwind.css -o ./static/css/main.css --watch",
    "tailwind:build": "NODE_ENV=production tailwindcss -i ./assets/css/tailwind.css -o ./static/css/main.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  }
}
